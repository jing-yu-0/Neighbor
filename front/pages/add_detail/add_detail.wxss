.icon-cha:before {
    content: "\e61a";
    color: red;
}

.container {
    background-color: white;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.top_title {
    font-size: 30rpx;
}

.intro {

    font-size: 27rpx;
    color: #999;
}

.image_content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 20rpx;
    justify-content: start;
}

.moment_img {
    width: 100rpx;
    height: 100rpx;
}

.image {
    position: relative;
}

.cha {
    position: absolute;
    top: 0;
}

.bottom,
.bottom_item {
    margin-top: 20rpx;
    background-color: white;
    padding: 20rpx;
}

.message_user,
.message_category {
    display: flex;
    flex-direction: row;
}

.phone_title {
    font-size: 30rpx;
    width: 300rpx;
}

.phone {
    font-size: 27rpx;
    color: #999
}
.curloc{
    float: left;
    text-align: left;
    margin-left: 0;
    background: rgb(255, 255, 255);
}
.message_category {
    margin-top: 2rpx;
}

.bottom_item {
    margin-top: 4rpx;
}

.wx-switch-input {
    width: 80rpx !important;
    height: 36rpx !important;
    background: #50D2C2 !important;
    border: #50d2c2 !important;
    /* 2018-07-18 重置开关边框颜色 */
}


/*白色样式（false的样式）*/

.wx-switch-input::before {
    width: 80rpx !important;
    height: 36rpx !important;
}

.wx-switch-input::after {
    width: 40rpx !important;
    height: 36rpx !important;
}

.tips {
    padding: 20rpx;
    color: red;
    font-size: 20rpx;
    height: 200rpx;
}

.submit {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.main {
    text-align: center;
    font-size: 40rpx;
    padding: 20rpx;
    font-weight: 1000;
    color: white;
    background-color: #50D2C2;
}