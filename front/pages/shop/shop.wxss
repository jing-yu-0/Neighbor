page {
  height: 100%;
  width: 100%;
}
.card-notice{
  margin-right: 10px;
  margin-left:10px;
}
.content {
  margin-top: 10rpx;
  color: #666;
  font-size: 26rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.content-left{
width: 70px;
display: flex;
flex-direction: row;
}

.goods_center {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.goods_left image {
  width: 250rpx;
  border-radius: 10rpx;
}

.goods_center {
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: white;
}

.goods_title .title {
  font-weight: 800;
}

.goods_rigth {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 460rpx;
}

.goods_intro {
  flex-grow: 2;
  font-size: 25rpx;
  letter-spacing: 2rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.operation {
  display: flex;
  flex-direction: row;
}

.goods_bottom button {
  background-color: #3cc;
  width: 100%;
  font-weight: 800;
  font-size: 30rpx;
  color: white;
  line-height: 60rpx;
}


.top_notice {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  border-radius: 5px;
}

.notice_title {
  height: 30rpx;
  line-height: 30rpx;
  width: 70px;
  font-size: 30rpx;
  font-weight: 800;
  color: cadetblue;
  padding: 10rpx;
}

.swiper_notice {
  width: 87%;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 100;
  font-size: 25rpx;
  letter-spacing: 2rpx;
}

.swiper_notice swiper-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.add-shop{
 margin:10px;
 position: fixed;
 bottom: 0;
}
.add-shop-block{
height:50px;
}
.add-shop-button{
  background-color: seagreen;
  border-radius: 5px;
}