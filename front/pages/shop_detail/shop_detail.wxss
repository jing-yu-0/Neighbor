button::after {
    border: none;
    outline: none;
}

button {
    background-color: rgba(0, 0, 0, 0);
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 50rpx;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.icon-zhuye:before {
    content: "\e604";
}

.icon-fenxiang:before {
    content: "\e627";
}

swiper {
    height: 300rpx; 
    background-color: white;
}

.body_top image {
    width: 100%;
}

.user_message {
    display: flex;
    flex-direction: row;
    background-color: white;
    padding: 10rpx;
}

.user_image image {
    width: 120rpx;
    border-radius: 50%;
}

.user_message_detail {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 10rpx;
}

.user_message_detail_title {
    font-weight: 800;
    color: cadetblue;
}

.user_message_detail_place {
    font-weight: 200;
    font-size: 25rpx;
}

.user_message_detail_place text {
    color: tan;
}

.user_message_detail_intro {
    background-color: white;
    padding: 10rpx;
    padding-top: 0rpx;
    font-size: 27rpx;
    letter-spacing: 5rpx;
}

.main_goods {
    background-color: white;
    margin-top: 10rpx;
    padding: 10rpx;
}

.main_goods_title {
    font-weight: 800;
}

.main_goods_item {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
}

.main_good {
    display: flex;
    flex-direction: column;
    margin: 10rpx;
}

.main_goods_item_image image {
    width: 340rpx;
}

.main_goods_item_title {
    font-size: 30rpx;
}

.price {
    color: red;
    font-size: 25rpx;
}

.map {
    background-color: white;
    padding: 20rpx;
    margin-top: 10rpx;
}

.map_back map {
    margin-top: 10rpx;
    width: 97%;
    padding: 10rpx;
    height: 300rpx;
}

.tips {
    padding: 10rpx;
    height: 200rpx;
    color: red;
    font-size: 25rpx;
}

.bottom {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    z-index: 999999;
    height: 80rpx;
    padding: 10rpx;
}

.other_operation {
    display: flex;
    flex-direction: row;
}

.zhuye {
    margin-right: 50rpx;
}

.share {
    margin-left: 50rpx;
}

.phone {
    font-weight: 800;
    font-size: 32rpx;
    color: coral;
}

/* 头部 */
.detail_header{
    padding: 20rpx 0;
    display: flex;
    border-bottom: 5rpx dashed #ccc;
  }
  .detail_header .txt_info{
    flex: auto;
    width: 50%;
    font-size: 50rpx;
    margin-left: 5px;
    font-weight:bold;
  }
  .detail_header .txt_info .tip{
    display: block;
    color: #ccc;
    font-size: 23rpx;
    line-height: 60rpx;
  }
  .detail_header .logo{
    margin-right: 10px;
    /* flex: none; */
    width: 220rpx;
    height: 130rpx;
  }
  
  /* 具体信息，中间 */
  .shop_msg-item{
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
  }
  .shop_msg-item .txt{
    flex: auto; 
    margin: 0 10rpx;
  }
  .shop_msg-item .icon{
    width: 28rpx;
    height: 28rpx;
    flex: none;  
  }
  
  /* 店铺照片 */
  .shop_pic-title{
      width:100%;
      margin-top: 5px;
  }
  .shop_pic{
    border-top: 5rpx dashed #ccc;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 5px;
  }
  .shop_pic image{
    width:218rpx;
    height: 145rpx;
    margin-top: 10rpx;
  }
  
  /* footer */
  .footer{
    font-size: 28rpx;
    color: #ccc;
    display: block;
    text-align: center;
    margin: 40rpx;
  }
  .edit-shop{
    margin:10px;
    bottom: 0;
   }
   .delete-shop{
    margin:10px;
    bottom: 0;
   }
   .add-shop-button{
     /* background-color: seagreen; */
     border-radius: 5px;
   }